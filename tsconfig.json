{
    "compilerOptions": {
        "rootDirs": ["./src", "./docs/markdown/api"],
        "outDir": "./dist",
        "emitDeclarationOnly": true,
        "target": "es2022",
        "lib": ["es2023", "dom", "dom.iterable", "es2018.intl"],
        "module": "esnext",
        "alwaysStrict": true,
        "declaration": true,
        "declarationDir": "./temp/types",
        "strict": true,
        "jsx": "preserve",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*.ts", "./docs/markdown/api/**/*.ts"]
}
